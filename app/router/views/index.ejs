<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Snippet</title>

    		<link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.css">

		<script src="/bower_components/jquery/dist/jquery.js"></script>
		<script src="/bower_components/bootstrap/dist/js/bootstrap.js"></script>
		<script src="/bower_components/angular/angular.js"></script>
		<script src="js/controllers/SnippetMain.js"></script>
		<script src="js/services/SnippetService.js"></script>
		<script src="js/app.js"></script>

	</head>
<body ng-app='snippetApp' ng-controller="SnippetMain as vm">
    <div class="collapse bg-inverse" id="navbarHeader">
        <div class="container">
            <div class="row">
            </div>
        </div>
    </div>
    <div class="navbar navbar-inverse bg-inverse">
        <div class="container justify-content-between">
            <a href="#" class="navbar-brand">Snippet</a>
        </div>
    </div>
    <div class="container">
	<div class="row">
		<div class="col-sm-12">
<form>
		<div class="form-group spotify-search">
			<label>Search Song</label>
			<input type="text" class="form-control" ng-model="vm.SearchQuery"/>
			<button style="float:right; margin-top: 1em; margin-bottom: 1em;" type="button" ng-click="vm.Search()" class="btn btn-primary">Search</button>
		</div>
		<div style="margin-top:1em;" class="results-table">
<table class="table table-sm">
  <thead class="thead-inverse">
    <tr>
      <th>Artist</th>
	<th>Song</th>
      <th>Popularity</th>
      <th>Preview URL</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="song in vm.SongResults.tracks.items">
	<th>{{song.artists[0].name}}</th>
      <td scope="row">{{song.name}}</td>
      <td>{{song.popularity}}</td>
      <td>{{song.preview_url}}</td>
    </tr>
  </tbody>
</table>
</div>
	</form>
</div>
</div>      
    </div>
        <style class="ng-scope">
            .navbar {
                margin-bottom: 0;
            }

            .open-stack-login {
                margin-top: 1em;
            }

	    .spotify-search{
		margin-top: 1em;
		}

            .jumbotron {
                padding-top: 6rem;
                padding-bottom: 6rem;
                margin-bottom: 0;
                background-color: #fff;
            }

                .jumbotron p:last-child {
                    margin-bottom: 0;
                }

            .jumbotron-heading {
                font-weight: 300;
            }

            .jumbotron .container {
                max-width: 40rem;
            }

            .album {
                min-height: 50rem; /* Can be removed; just added for demo purposes */
                padding-top: 3rem;
                padding-bottom: 3rem;
                background-color: #f7f7f7;
            }

            .card {
                float: left;
                width: 33.333%;
                padding: .75rem;
                margin-bottom: 2rem;
                border: 0;
            }

                .card > img {
                    margin-bottom: .75rem;
                }

            .card-text {
                font-size: 85%;
            }

            footer {
                padding-top: 3rem;
                padding-bottom: 3rem;
            }

                footer p {
                    margin-bottom: .25rem;
                }
        </style>

</body>
</html>

